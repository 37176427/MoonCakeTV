    "@upstash/redis": "^1.25.0",
    "@vidstack/react": "^1.12.13",
    "artplayer": "^5.2.3",
    "clsx": "^2.0.0",
    "framer-motion": "^12.18.1",
    "hls.js": "^1.6.6",
    "lucide-react": "^0.438.0",
    "media-icons": "^1.1.5",
    "next": "^15.4.2",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.4.0",
    "redis": "^4.6.7",
    "string_decoder": "^1.3.0",
    "sweetalert2": "^11.11.0",
    "swiper": "^11.2.8",
    "tailwind-merge": "^2.6.0",
    "vidstack": "^0.6.15",
    "zod": "^4.0.5"
