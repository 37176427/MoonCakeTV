# Caddyfile for MooncakeTV

# Main application
{$DOMAIN:localhost} {
    
    # Reverse proxy to Next.js app
    reverse_proxy app:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }
    
    # Enable compression
    encode gzip
    
    # Security headers
    header {
        # Remove server info
        -Server
        
        # Security headers
        X-Content-Type-Options nosniff
        X-Frame-Options SAMEORIGIN
        X-XSS-Protection "1; mode=block"
        Referrer-Policy strict-origin-when-cross-origin
        Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"
    }
    
    # Static file handling with caching
    @static {
        path /_next/static/* /favicon.ico /robots.txt
    }
    handle @static {
        header Cache-Control "public, max-age=31536000, immutable"
        reverse_proxy app:3000
    }
    
    # API routes with no caching
    @api {
        path /api/*
    }
    handle @api {
        header Cache-Control "no-cache, no-store, must-revalidate"
        reverse_proxy app:3000
    }
    
    # Log access
    log {
        output file /var/log/caddy/access.log
        format console
    }
}

# pgweb Database Management UI (Optional - for development/staging)
pgweb.{$DOMAIN:localhost} {
    reverse_proxy pgweb:8081
}

# Health check endpoint
health.{$DOMAIN:localhost} {
    respond /health "OK" 200
}
